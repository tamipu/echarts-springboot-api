{
  "title": {
    "text": "Pie Chart Example",
    "left": "center"
  },
  "tooltip": {
    "trigger": "item",
    "formatter": "{a} <br/>{b} : {c} ({d}%)"
  },
  "legend": {
    "orient": "vertical",
    "left": "left",
    "show": false,
    "data": ["Category A", "Category B", "Category C", "Category D"]
  },
  "series": [
    {
      "name": "Category",
      "type": "pie",
      "radius": "55%",
      "center": ["50%", "60%"],
      "data": [],
      "label": {
        "normal": {
          "formatter": "{b}: {c} ({d}%)",
          "position": "outside"
        }
      },
      "emphasis": {
        "itemStyle": {
          "shadowBlur": 20,
          "shadowOffsetX": 10,
          "shadowOffsetY": 10,
          "shadowColor": "rgba(0, 0, 0, 0.8)",
          "borderColor": "rgba(0, 0, 0, 0.8)",
          "borderWidth": 3
        },
        "label": {
          "show": true,
          "fontSize": "20",
          "fontWeight": "bold"
        }
      }
    }
  ]
}
